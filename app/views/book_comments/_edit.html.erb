<%= form_with model:bookComment, url:book_book_comment_path(book_id:bookId), book_id:bookId, local:true do |f| %>
  <%= render 'layouts/errors', obj: @bookComment %>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :book_comment, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
