<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% following_users.each do |user| %>
      <tr>
        <td><%= image_tag user.profile_image, size: "50x50" if user.profile_image.present? %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.following_user.count %></td>
        <td>フォロワー数: <%= user.following_user.count %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
