<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<%= render 'detail', user: current_user %>
      <h2>Book comment</h2>
        <table class='table'>

          <% @bookComments.each do |comment| %>
            <tr>
              <td><%= comment.comment %></td>
            </tr>
          <% end %>
        </table>
      <%= render 'book_comments/edit', bookComment: @bookComment, bookId:@book.id %>
    </div>
  </div>
</div>